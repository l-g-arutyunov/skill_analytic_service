<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <property dbms="postgresql,mssql,oracle" value="false" name="autoIncrement"/>
    <property dbms="h2" value="true" name="autoIncrement"/>

    <changeSet id="1.00.01-s_experience-0001" author="sthoomy" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="s_experience_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="s_experience_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="1.00.01-s_experience-0002" author="sthoomy" failOnError="true" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="s_experience"/>
            </not>
        </preConditions>
        <createTable tableName="s_experience">
            <column name="id" type="bigint"
                    defaultValueSequenceNext="s_experience_id_seq" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="value_exp" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_skill_id" type="bigint">
                <constraints foreignKeyName="fk_experience_user_skill_id" referencedTableName="s_user_skill" referencedTableSchemaName="s" referencedColumnNames="id"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="sthoomy" id="1.00.01-s_experience-0003">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="s_experience"/>
                <not>
                    <indexExists indexName="s_experience_index_0"/>
                </not>
            </and>
        </preConditions>
        <createIndex indexName="s_experience_index_0" tableName="s_experience" clustered="true">
            <column name="id"/>
            <column name="value_exp"/>
            <column name="user_skill_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1.00.01-s_experience-0004" author="Bofh82" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <indexExists tableName="s_experience" indexName="s_experience_index_0"/>
        </preConditions>

        <comment>drop index s_experience_index_0</comment>

        <dropIndex tableName="prf_profile" indexName="s_experience_index_0"/>
    </changeSet>

    <changeSet id="1.00.01-s_experience-0005" author="Bofh82" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="s_experience" columnName="nick_name"/>
        </preConditions>

        <comment>Rename column value_exp to value</comment>

        <renameColumn tableName="s_experience" oldColumnName="value_exp" newColumnName="value"/>
    </changeSet>

    <changeSet id="1.00.01-s_experience-0006" author="Bofh82" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="s_experience" columnName="coefficient"/>
        </preConditions>

        <comment>Modify type of column value to decimal</comment>

        <modifyDataType tableName="s_experience" columnName="value" newDataType="decimal"/>
    </changeSet>

</databaseChangeLog>

