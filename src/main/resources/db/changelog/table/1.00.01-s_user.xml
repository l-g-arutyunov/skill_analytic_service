<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <property dbms="postgresql,mssql,oracle" value="false" name="autoIncrement"/>
    <property dbms="h2" value="true" name="autoIncrement"/>

    <changeSet id="1.00.01-s_user-0001" author="sthoomy" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="s_user_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="s_user_id_seq" schemaName="s" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="1.00.01-s_user-0002" author="sthoomy" failOnError="true" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="s_user" schemaName="s"/>
            </not>
        </preConditions>
        <createTable tableName="s_user" schemaName="s">
            <column name="id" type="bigint"
                    defaultValueSequenceNext="s_user_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="sthoomy" id="1.00.01-s_user-0003">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="s_user"/>
                <not>
                    <indexExists indexName="s_user_index_0" schemaName="s" />
                </not>
            </and>
        </preConditions>
        <createIndex indexName="s_user_index_0" tableName="s_user" schemaName="s" clustered="true">
            <column name="id"/>
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="1.00.01-user-0004" author="Bofh82" failOnError="true" runInTransaction="false">
        <preConditions onFail ="MARK_RAN">
            <tableExists tableName="s_user" schemaName="s"/>
            <not>
                <columnExists tableName="s_user" columnName="external_id"/>
            </not>
        </preConditions>
        <addColumn tableName="s_user">
            <column name="external_id" type="bigint" remarks="External key of user in master system">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1.00.01-user-0005" author="Bofh82" failOnError="true">
        <preConditions onFail ="MARK_RAN">
            <tableExists tableName="s_user" schemaName="s"/>
            <not>
                <columnExists tableName="s_user" columnName="first_name"/>
                <columnExists tableName="s_user" columnName="last_name"/>
                <columnExists tableName="s_user" columnName="nick_name"/>
            </not>
        </preConditions>
        <comment>Add column: first_name, last_name, nick_name</comment>
        <addColumn tableName="s_user">
            <column name="first_name" type="varchar(30)" remarks="First name">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="s_user">
            <column name="last_name" type="varchar(30)" remarks="Last name">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="s_user">
            <column name="nickname" type="varchar(36)" remarks="Nickname">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1.00.01-user-0006" author="Bofh82" failOnError="true" runInTransaction="false">
        <preConditions onFail ="MARK_RAN">
            <tableExists tableName="s_user" schemaName="s"/>
            <columnExists tableName="s_user" columnName="name"/>
        </preConditions>
        <comment>delete column: name</comment>
        <dropColumn tableName="s_user" columnName="name"/>
    </changeSet>

    <changeSet id="1.00.01-user-0007" author="Bofh82" failOnError="true" runInTransaction="false">
        <preConditions onFail ="MARK_RAN">
            <tableExists tableName="s_user" schemaName="s"/>
            <indexExists tableName="s_user" indexName="s_user_index_0"/>
        </preConditions>
        <comment>delete index: s_user_index_0</comment>
        <dropIndex tableName="s_user" indexName="s_user_index_0"/>
    </changeSet>

</databaseChangeLog>